<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>defby.ai</title>
    <style>
      @font-face {
        font-family: "Astra Sans";
        src: local("Astra Sans"), local("AstraSans");
        font-style: normal;
        font-weight: 400 800;
      }

      :root {
        --bg: #efefef;
        --text: #5f5f5f;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        height: 100%;
      }

      body {
        font-family: "Astra Sans", "Astra", "Helvetica Neue", Arial, sans-serif;
        background: var(--bg);
      }

      .page {
        --px: 0;
        --py: 0;
        position: relative;
        height: 100vh;
        overflow: hidden;
        display: grid;
        place-items: center;
      }

      .dot-grid {
        position: absolute;
        inset: -6%;
        z-index: 0;
        background-color: var(--bg);
        background-image: radial-gradient(circle, #d3d3d3 1.05px, transparent 1.05px);
        background-size: 24px 24px;
        background-position: 0 0;
        transform: translate(calc(var(--px) * -5px), calc(var(--py) * -5px));
        transition: none;
        will-change: transform;
        pointer-events: none;
      }

      .brand {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        z-index: 1;
        display: flex;
        align-items: center;
        gap: clamp(8px, 1.2vw, 14px);
        padding: 12px 16px;
      }

      .brand img {
        width: clamp(48px, 7vw, 86px);
        height: auto;
        display: block;
      }

      .brand h1 {
        margin: 0;
        color: var(--text);
        font-size: clamp(2rem, 5.5vw, 4.4rem);
        line-height: 0.95;
        font-weight: 700;
        letter-spacing: -0.03em;
      }
    </style>
  </head>
  <body>
    <main class="page" id="page">
      <div class="dot-grid" aria-hidden="true"></div>

      <section class="brand" aria-label="defby.ai brand">
        <img src="/defby_logo.svg" alt="defby.ai logo" />
        <h1>defby.ai</h1>
      </section>
    </main>

    <script is:inline>
      const page = document.getElementById("page");

      if (page) {
        const setParallax = (clientX, clientY) => {
          const x = (clientX / window.innerWidth - 0.5) * 2;
          const y = (clientY / window.innerHeight - 0.5) * 2;
          page.style.setProperty("--px", `${x}`);
          page.style.setProperty("--py", `${y}`);
        };

        window.addEventListener(
          "pointermove",
          (event) => {
            setParallax(event.clientX, event.clientY);
          },
          { passive: true }
        );

        window.addEventListener("pointerleave", () => {
          page.style.setProperty("--px", "0");
          page.style.setProperty("--py", "0");
        });
      }
    </script>
  </body>
</html>
